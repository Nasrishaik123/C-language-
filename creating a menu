#include<stdio.h>
#include<conio.h>
void circle();
void circle()
{

    int r;
    printf("enter a no:");
    scanf("%d",&r);
    float res=3.14*r*r;
    printf("the area of circle is %f",res);
}
int rect();
int rect()
{
    int c,d;
        printf("enter c and d");
        scanf("%d %d",&c,&d);
        printf("the area is %d",c*d);

}
int triangle(int,int,int);
int triangle(int a, int b,int c)
{
    printf("the perimeter is %d",a+b+c);
}
void main()
{

    int a;
    printf("\n1.CIRCLE");
    printf("\n2.RECT");
    printf("\n3.TRIANGLE");
     printf("enter a choice:");
    scanf("%d",&a);
    switch(a)
    for(int i=0;i<a;i++)
    {
        case 1:circle();
        break;
        case 2:rect();
        break;
        case 3:triangle(10,20,30);
        break;
        default:
            printf("\n invalid num");
    }
}
